@model DigitalZooProject.Models.Animal

<div class="container">
    <div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th align="center" style="width:1200px">Description</th>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Age</td>
                    <td>@Model.Description</td>
                    <td>@Model.Category.Name</td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <div>
        <table>
            <thead>
                <tr>
                    <th style="text-align:center">Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model.Comments)
                {
                    <tr>
                        <td align="center">@comment.Content</td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            @using (Html.BeginForm("AddComment", "Catalog"))
            {
                @Html.TextArea("content", htmlAttributes: new { @id = "add-comment", @placeholder = "Write a Comment", required = "required" });
                @Html.Hidden("animalId", value: Model.AnimalId);
                <div>
                    <button id="add-comment-button" class="new-button">Add a Comment!</button>
                </div>
            }
        </div>
        <div>
            <p id="error">@ViewBag.Message</p>
        </div>
    </div>
</div>
